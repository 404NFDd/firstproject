generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 사용자 모델
model User {
  id               String     @id @default(cuid())
  email            String     @unique
  name             String?
  password         String
  image            String?
  emailSubscription Int       @default(0) // 0: 구독 안함, 1: 구독함
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  
  // 관계
  refreshTokens RefreshToken[]
  newsReadHistory NewsReadHistory[]
  
  @@index([email])
  @@index([emailSubscription])
}

// Refresh Token 저장소
model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([userId])
}

// 뉴스 기사
model News {
  id            String   @id @default(cuid())
  title         String   @db.LongText
  description   String?  @db.LongText
  content       String?  @db.LongText
  imageUrl      String?  @db.Text
  sourceUrl     String?  @db.Text
  source        String
  author        String?
  publishedAt   DateTime
  category      String   @default("general")
  priority      Int      @default(0)
  isTranslated  Int      @default(0) // 0: 미번역, 1: 번역 완료
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // 관계
  readHistory   NewsReadHistory[]
  summary       NewsSummary?
  
  @@index([category])
  @@index([publishedAt])
  @@index([createdAt])
}

// 뉴스 읽음 이력
model NewsReadHistory {
  id        String   @id @default(cuid())
  userId    String
  newsId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade)
  readCount Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, newsId])
  @@index([userId])
  @@index([newsId])
}

// 뉴스 요약 저장
model NewsSummary {
  id        String   @id @default(cuid())
  newsId    String   @unique
  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade)
  summary   String   @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([newsId])
  @@index([createdAt])
}

// 뉴스 동기화 로그
model NewsSyncLog {
  id        String   @id @default(cuid())
  status    String   @default("success") // success, failed, processing
  fetched   Int      @default(0)
  persisted Int      @default(0)
  skipped   Int      @default(0)
  error     String?  @db.Text
  createdAt DateTime @default(now())
  
  @@index([createdAt])
  @@index([status, createdAt])
}
